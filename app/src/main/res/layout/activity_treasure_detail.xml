<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.sohu.auto.treasure.widget.SHAutoActionbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:actionbar_type="common"
        app:actionbar_title="宝藏详情"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:paddingTop="20dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:id="@+id/tv_treasure_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            tools:text="这里面是宝藏里面的文字\n这里面是宝藏里面的文字\nthis is treasure"/>

        <ImageView
            android:id="@+id/iv_treasure_img"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_below="@id/tv_treasure_text"
            android:scaleType="centerCrop"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:src="@color/black_50" />

    </RelativeLayout>

</RelativeLayout>