<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NormalEditTextStyle">
        <item name="android:gravity">start</item>
        <item name="android:background">@drawable/shape_edit_text</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">@dimen/font_13</item>
    </style>

    <style name="NormalButtonStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/shape_button</item>
    </style>

</resources>
